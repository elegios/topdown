itemb "pot" "Potion of Awesome" "potion" 0 "It is awesome" {
	nudge health -1
	remove pot
}

foreach {
	id <- [list hpotmin hpotmed hpotmax]
	variation <- [list 0 1 2]
	name <- [list "Minor Health Potion" "Medium Health Potion" "Major Health Potion"]
	amount <- [list 2 5 10]
} in {
	itemb $id $name potion $variation "Heals you some." {
		nudge health $amount
		remove $id
	}
}
